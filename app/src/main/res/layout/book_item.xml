<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="35dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/book_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        android:text="Book name: "
        />


    <TextView
        android:id="@+id/book_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/book_name_tv"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        android:text="Author name: "
        />

    <TextView
        android:id="@+id/book_pub_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/book_author_tv"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        android:text="Publishing Date: "
        />


    <TextView
        android:id="@+id/book_link_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/book_pub_date_tv"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        android:autoLink="web"
        android:text="Open Book: "
        />




</RelativeLayout>